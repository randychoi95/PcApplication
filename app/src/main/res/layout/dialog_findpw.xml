<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/find_pw_info"
        android:layout_width="410dp"
        android:layout_height="50dp"
        android:background="@color/design_default_color_primary_dark"
        android:gravity="center"
        android:text="PW 찾기"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/find_edit_name2"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="이름을 입력하세요"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/find_pw_info"
        app:layout_constraintTop_toBottomOf="@+id/find_pw_info" />

    <EditText
        android:id="@+id/find_edit_id"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="ID를 입력하세요"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/find_edit_name2"
        app:layout_constraintTop_toBottomOf="@+id/find_edit_name2" />

    <EditText
        android:id="@+id/find_edit_phone2"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="전화번호를 입력하세요"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/find_edit_id"
        app:layout_constraintTop_toBottomOf="@+id/find_edit_id" />

    <Button
        android:id="@+id/find_btn_ok2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="확인"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/find_edit_phone2"
        app:layout_constraintTop_toBottomOf="@+id/find_edit_phone2" />

    <Button
        android:id="@+id/find_btn_cancel2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="취소"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/find_edit_phone2"
        app:layout_constraintTop_toBottomOf="@+id/find_edit_phone2" />

</androidx.constraintlayout.widget.ConstraintLayout>