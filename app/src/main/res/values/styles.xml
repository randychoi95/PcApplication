<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#A1000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#ffff</item>

    </style>

    <!--  액션바 없애기  -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- TextInputLayout 테두리 색상   -->
    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorKeyBrown</item>
    </style>

    <!-- 버튼 폰트,색상 -->
    <style name="ButtonTheme" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/test</item>
        <item name="android:textColor">@color/colorKeyBrown</item>
    </style>

    <!-- 회원가입 EditText   -->
    <style name = "joinEdit" parent = "Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">#FFFFFF</item>
        <item name="android:fontFamily">@font/test</item>
        <item name="colorControlNormal">#A3A2A2</item>
    </style>

    <!-- 회원가입 EditText   -->
    <style name = "test" >
        <item name="colorAccent">#FFFFFF</item>
        <item name="colorControlNormal">#A3A2A2</item>
    </style>

</resources>
